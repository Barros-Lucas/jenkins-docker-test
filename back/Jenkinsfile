pipeline {
  agent any
  tools {
    maven 'M3'
  }
  stages {
    stage('Build image') {
      steps {
        	sh  'cd back/ && mvn package'
		sh 'mkdir -p back/target/dependency'
	      	sh 'cd back/target/dependency && jar -xf ../*jar'
		
		dockerfile {
			filename 'dashboard/back-test-jenkins'
			dir 'back'
		}
      }
    }
  }
}
